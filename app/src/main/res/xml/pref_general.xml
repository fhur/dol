<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Integrations" >

        <!-- NOTE: EditTextPreference accepts EditText attributes. -->
        <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
        <EditTextPreference
            android:key="mixpanel_api_key"
            android:title="Mixpanel API Key"
            android:defaultValue=""
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:singleLine="true"
            android:hint="Enter your mixpanel API key"
            android:summary="Enter your mixpanel API here, without this Mixpanel will not receive events"
            android:maxLines="1" />

    </PreferenceCategory>

</PreferenceScreen>
